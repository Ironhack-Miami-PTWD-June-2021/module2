<h2>Update a book</h2>


<form action="/books/{{_id}}/edit" method="POST">
    <label>
        Title: 
        <input type="text" name="title" value="{{title}}" >  
    </label>
    <br>
   

    <label>
        Description: 
        <textarea name="description" cols="30" rows="5"> {{ description }} </textarea>
    </label>
    <br>

    <label>
        Author (full name): 
        <input type="text" name="author" value="{{author}}">
    </label>
    <br>

    <label>
        Rating: 
        <input type="number" name="rating" min="1" max="10" value="{{rating}}">
    </label>
    <br>

    <button type="submit">Save changes</button>
</form>

